package com.matthewhare.timeline.view.timeline.timelineclassic.componants
{
	import spark.components.Group;
	
	public class TimelineLegend extends Group
	{
		
		private var _visibleStartDate:Date
		private var _visibleEndDate:Date
		private var _legendIncrements:Date
		
		public function TimelineLegend()
		{
			super();
		}
		
		public function get legendIncrements():Date
		{
			return _legendIncrements;
		}

		public function set legendIncrements(value:Date):void
		{
			_legendIncrements = value;
		}

		public function get visibleEndDate():Date
		{
			return _visibleEndDate;
		}

		public function set visibleEndDate(value:Date):void
		{
			_visibleEndDate = value;
		}

		public function get visibleStartDate():Date
		{
			return _visibleStartDate;
		}

		public function set visibleStartDate(value:Date):void
		{
			_visibleStartDate = value;
		}

		/**
		 * Draws the legend, with forks, and labels.
		 * */
		private function draw():void
		{
			
		}
	}
}