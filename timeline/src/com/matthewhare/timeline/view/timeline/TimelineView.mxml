<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="100%" height="100%" 
		 currentState="editable"
		 xmlns:timelineclassicrenderer="com.matthewhare.timeline.view.timeline.renderers.timelineclassicrenderer.*" 
		 xmlns:editor="com.matthewhare.timeline.view.timeline.editor.*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.matthewhare.timeline.model.vo.TimelineVO;
			private var _timelineVO:TimelineVO;
			
			[Bindable]
			public function set timelineVO(timelineVO:TimelineVO):void
			{
				this._timelineVO = timelineVO;
			}

			public function get timelineVO():TimelineVO
			{
				return _timelineVO;
			}

		]]>
	</fx:Script>
	<s:states>
		<s:State name="editable"/>
		<s:State name="display"/>
	</s:states>
	<timelineclassicrenderer:TimelineClassicRenderer timelineVO="{this.timelineVO}"/>
	<editor:Editor includeIn="editable"/>
</s:Group>
